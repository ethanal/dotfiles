#!/usr/bin/env sh

# if command -v nvim > /dev/null; then
#   function vim() {
#     if [ -e $(pwd)/.vim-server.pipe ]; then
#       echo "Vim server already running in this directory. Running without server."
#       sleep 1
#       nvim $@
#     else
#       nvim --listen $(pwd)/.vim-server.pipe $@
#     fi
#   }
# fi

file=$(realpath $1)
dirname=$(dirname "$file")

# traverse up the directory to find the .vim-server.pipe file
while [ ! -e "$dirname/.vim-server.pipe" ]; do
  echo $dirname
  if [ "$dirname" = "/" ]; then
    open $1
    exit 0
  fi

  dirname=$(dirname "$dirname")
done

pipe_file="$dirname/.vim-server.pipe"

/opt/homebrew/bin/nvim --server $pipe_file --remote $1
if [ -n "$2" ]; then
  /opt/homebrew/bin/nvim --server $pipe_file --remote-send "<ESC>:$2<CR>"
fi
