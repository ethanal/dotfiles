{
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  },
  "coc.source.buffer.enable": false,
  "coc.source.around.enable": false,
  "diagnostic.floatConfig": {
    "highlight": "CocFloatingDiagnostic"
  },
  "diagnostic.errorSign": ">>",
  "diagnostic.warningSign": ">>",
  "diagnostic.infoSign": ">>",
  "diagnostic.virtualText": false,
  "diagnostic.checkCurrentLine": true,
  "suggest.autoTrigger": "none",
  "suggest.timeout": 1000,
  "suggest.noselect": true,
  "notification.disabledProgressSources": ["*"],
  "coc.preferences.formatOnSaveFiletypes": [
    "typescript",
    "typescriptreact",
    "terraform",
    "css",
    "jsonc",
    "nomad"
  ],
  "pyright.inlayHints.enable": false,
  "eslint.autoFixOnSave": true,
  // "rust-analyzer.inlayHints.typeHints.enable": true
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.cargo.extraArgs": ["--target-dir", ".rust-analyzer/target"],
  "rust-analyzer.inlayHints.maxLength": 100,
  "workspace.ignoredFolders": ["$HOME", "$HOME/.cargo/**", "$HOME/.rustup/**"],
  "[python]": {
    "inlayHint.enable": false
  },
  "[rust]": {
    // "inlayHint.enable": true
    "inlayHint.display": false
  },
  "sql.database": "postgresql"
}
