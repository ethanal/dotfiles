{
	"languageserver": {
		"go": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod"
			],
			"filetypes": [
				"go"
			]
		},
		"terraform": {
			"command": "terraform-ls",
			"args": [
				"serve"
			],
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {},
			"settings": {}
		},
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"cc",
				"cpp",
				"c++",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				".git"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		}
	},
	"coc.source.buffer.enable": false,
	"coc.source.around.enable": false,
	"diagnostic.floatConfig": {
		"highlight": "CocFloatingDiagnostic"
	},
	"diagnostic.checkCurrentLine": true,
	"diagnostic.errorSign": ">>",
	"diagnostic.infoSign": ">>",
	"diagnostic.virtualText": false,
	"diagnostic.warningSign": ">>",
	"inlayHint.display": false,
	"notification.disabledProgressSources": [
		"*"
	],
	"pyright.disableDiagnostics": true,
	"rust-analyzer.cargo.extraArgs": [
		"--target-dir",
		"target/.rust-analyzer"
	],
	"rust-analyzer.check.command": "clippy",
	"rust-analyzer.inlayHints.maxLength": 100,
	"sql.database": "postgresql",
	"suggest.autoTrigger": "none",
	"suggest.noselect": true,
	"suggest.timeout": 1000,
	"workspace.ignoredFolders": [
		"$HOME",
		"$HOME/.cargo/**",
		"$HOME/.rustup/**"
	],
	"biome.bin": "/opt/homebrew/bin/biome",
	"biome.requireConfiguration": false,
	"[typescript]": {
		"coc.preferences.formatOnSave": true
	},
	"[typescriptreact]": {
		"coc.preferences.formatOnSave": true
	},
	"[terraform]": {
		"coc.preferences.formatOnSave": true
	},
	"[css]": {
		"coc.preferences.formatOnSave": true
	},
	"[jsonc]": {
		"coc.preferences.formatOnSave": false
	},
	"[nomad]": {
		"coc.preferences.formatOnSave": true
	},
	"[python]": {
		"coc.preferences.formatOnSave": true
	}
}
