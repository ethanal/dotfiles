{
    "[css]":
    {
        "coc.preferences.formatOnSave": true
    },
    "[jsonc]":
    {
        "coc.preferences.formatOnSave": false
    },
    "[nomad]":
    {
        "coc.preferences.formatOnSave": true
    },
    "[python]":
    {
        "coc.preferences.formatOnSave": true
    },
    "[terraform]":
    {
        "coc.preferences.formatOnSave": true
    },
    "[typescript]":
    {
        "coc.preferences.formatOnSave": true
    },
    "[typescriptreact]":
    {
        "coc.preferences.formatOnSave": true
    },
    "biome.bin": "/opt/homebrew/bin/biome",
    "biome.requireConfiguration": false,
    "coc.preferences.formatOnSaveTimeout": 1000,
    "coc.source.around.enable": false,
    "coc.source.buffer.enable": false,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.errorSign": ">>",
    "diagnostic.floatConfig":
    {
        "highlight": "CocFloatingDiagnostic"
    },
    "diagnostic.infoSign": ">>",
    "diagnostic.virtualText": false,
    "diagnostic.warningSign": ">>",
    "hover.floatConfig":
    {
        "highlight": "CocFloatingHover"
    },
    "inlayHint.display": false,
    "languageserver":
    {
        "go":
        {
            "command": "gopls",
            "filetypes":
            [
                "go"
            ],
            "rootPatterns":
            [
                "go.mod"
            ]
        },
        "terraform":
        {
            "args":
            [
                "serve"
            ],
            "command": "terraform-ls",
            "filetypes":
            [
                "terraform",
                "tf"
            ],
            "initializationOptions":
            {},
            "settings":
            {}
        },
        "python": {

          "command": "ruff",
          "args": ["server"],
          "filetypes": ["python"]
        },
      "nix": {
        "command": "nil",
        "filetypes": ["nix"],
        "rootPatterns":  ["flake.nix"],
        "settings": {
          "nil.formatting.command": ["nixfmt"],
        }
      }
    },
    "notification.disabledProgressSources":
    [
        "*"
    ],
    "pyright.disableDiagnostics": true,
    "python.formatting.provider": "none",
    "rust-analyzer.cargo.extraArgs":
    [
        "--tests",
        "--target-dir",
        "target/.rust-analyzer"
    ],
    "rust-analyzer.inlayHints.maxLength": 100,
    "sql.database": "postgresql",
    "sql.lintOnChange": false,
    "sql.lintOnOpen": false,
    "sql.lintOnSave": false,
    "suggest.autoTrigger": "none",
    "suggest.noselect": true,
    "suggest.timeout": 1000,
    "workspace.ignoredFolders":
    [
        "$HOME",
        "$HOME/.cargo/**",
        "$HOME/.rustup/**"
    ]
}
