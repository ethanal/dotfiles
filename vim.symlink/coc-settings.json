{
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "terraform": {
			"command": "terraform-ls",
			"args": ["serve"],
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {},
			"settings": {}
		}
  },
  "coc.source.buffer.enable": false,
  "coc.source.around.enable": false,
  "diagnostic.errorSign": ">>",
  "diagnostic.warningSign": ">>",
  "diagnostic.infoSign": ">>",
  "suggest.autoTrigger": "none",
 // "diagnostic.messageTarget": "echo",
  "go.languageServerExperimentalFeatures": {
    // Disable diagnostics, because they'll run on the entire repo.
    // With them disabled, go vet will run on just the package.
    "diagnostics": false
  },
  "suggest.timeout": 500,
  "coc.preferences.formatOnSaveFiletypes": ["typescript", "typescriptreact", "terraform", "css"],
}
